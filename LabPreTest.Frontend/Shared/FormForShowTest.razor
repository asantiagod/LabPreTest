@typeparam TModel where TModel : ITestEntity

<NavigationLock OnBeforeInternalNavigation="OnBeforeInternalNavigation" />

<EditForm EditContext="editContext" >
    <DataAnnotationsValidator />
    <div class="mb-3 d-flex flex-column align-items-center">
        <label><h1>Detalles del exámen</h1></label>
    </div>
    <div class="mb-3 d-flex flex-column align-items-center">
        <table class="table table-bordered table-striped w-75">
            <thead class="text-center">
                <tr>
                    <td colspan="4">
                    <InputText class="form-control" @bind-Value="@Model.Name" disabled />
                    </td>
                </tr>
                <tr>
                    <th>Condición preanalítica</th>
                    <th>Descripción</th>
                    <th>Tipo de recipiente</th>
                    <th>Sección</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var t in Model.Conditions)
                {
                    <tr>
                        <td>@t.Condition.Name</td>
                        <td>@t.Condition.Description</td>
                        <td>@Model.TestTube.Name</td>
                        <td>@Model.Section.Name</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <style>
        th, td {
            padding: 10px 20px;
        }

        .form-control {
            text-align: center; /* Centra el texto dentro del input */
        }
    </style>
    <div class="d-flex flex-column align-items-center">
        <button class="btn btn-success " @onclick="ReturnAction">Regresar</button>
    </div>

</EditForm>

