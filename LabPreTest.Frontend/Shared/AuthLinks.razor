<AuthorizeView>
    <Authorized>       
        <div class="user-name px-3">
            @if (!string.IsNullOrEmpty(photoUser))
            {
                <div>
                    <img class="card-img" src="@photoUser" width="100" height="100"   />
                </div>
            }
            <a href="EditUser" class="nav-link btn user-name"> @context.User.Identity!.Name</a>
            <a href="Logout" class="nav-link btn user-name">Cerrar Sesión</a>
        </div>
    </Authorized>
    <NotAuthorized>
        <div class="top-row px-3">
            <a href="Register" class="nav-link btn btn-link">Registro</a>
            <a class="nav-link btn btn-link" @onclick=@(()=> ShowModal())>Iniciar Sesión</a>
        </div>
    </NotAuthorized>
</AuthorizeView>